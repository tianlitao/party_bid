%header
  {{name}}  (  {{people}}人 )
  .header-left
    %button.btn-style.btn-4(ng-click="back()") 返回
#wrapper.wrapper
  %ul.list-style-2
    %li(ng-repeat="bidding in biddings track by $index")
      %h3
        {{bidding.bid_name}}
      %p
        {{bidding.bid_phone}}
        %p.header-right
          ￥ {{bidding.bid_price}}
%footer
  %div(ng-show="success")
    %pre
      竞价结果：{{bid_name}}    ￥{{price}}    {{phone}}    竞价成功！
%footer
  %div(ng-show="fail")
    %pre
      竞价失败！
%footer
  %ul.footer-nav.footer-nav-2tabs
    %li.active
      %a(href="#/bidding")
        %i.icon-group 竞价结果
    %li
      %a(href="#/price_count")
        %i.icon-comment 价格统计
.modal.fade#ModalSuccess
  .modal-dialog
    .modal-content
      .modal-header
      %a(class="close" data-dismiss="modal" ) &times
        %h4.modal-title
      .modal-body
      %center
      {{bid_name}}  {{phone}}  ￥{{price}}    竞价成功
      .modal-footer

